@model MvcKütüphaneOtomasyonu.Models.Entity.TBLHAREKET

@{
    ViewBag.Title = "OduncVer";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>OduncVer</h2>


<form class="form-group" method="post">
    <div>
        <label> Üye Id</label>
        @*@Html.TextBoxFor(k => k.UYE, new { @class = "form-control" })*@
        @Html.DropDownListFor(k => k.TBLUYELER.ID, (List<SelectListItem>)ViewBag.deger1, new {@class = "form-control"});
    </div>

    <div>
        <label> Kitap  Id </label>
        @*@Html.TextBoxFor(k => k.YAZAR, new { @class = "form-control" })*@,
        <br />
        @Html.DropDownListFor(k => k.TBLKİTAP.ID, (List<SelectListItem>)ViewBag.deger2, new { @class = "form-control" })

    </div>
    <div>
        <label> Personel Id</label>
        @Html.DropDownListFor(k => k.TBLPERSONEL.ID, (List<SelectListItem>)ViewBag.deger3, new { @class = "form-control" })

    </div>

    <div>
        <label> Kitap Alış Tarihi</label>
        <input type="text" class="form-control" name="ALİSTARİHİ" value="@DateTime.Now.ToShortDateString()"/> 
        @*her zman bugünki tarihi alalım diye*@
    </div>
    <div>
        <label> Kitap İade Tarihi</label>
        <input type="text" class="form-control" name="İADETARİHİ" value="@DateTime.Now.AddDays(7).ToShortDateString()"/>
    </div>



    <div style="margin-top:15px">
        <button class="btn btn-info" id="Btn1"> KİTAP ÖDÜNÇ VER   </button>
        <input type="hidden" value="False" name="İSLEMDURUM"/>
    </div>
</form>



