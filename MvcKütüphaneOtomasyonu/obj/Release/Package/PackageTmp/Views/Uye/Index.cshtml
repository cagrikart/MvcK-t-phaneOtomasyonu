@using MvcKütüphaneOtomasyonu.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TBLUYELER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Üye Listesi </h2>

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Üye Adı</th>
        <th>Üye SOYAD</th>
        <th>Üye OKUL</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>KİTAP  GEÇMİŞİ </th>
     
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.AD</td>
            <td>@item.SOYAD</td>
            <td>@item.OKUL</td>

            <td>
                <a href="/Uye/UyeSil/@item.ID" class="btn btn-danger">SİL</a>
            </td>
            <td>
                <a href="/Uye/UyeGetir/@item.ID" class="btn btn-success">GÜNCELLE</a>
            </td> 
            <td>
                <a href="/Uye/UyeKitapGecmisi/@item.ID" class="btn btn-default" style="background-color:lightblue">KİTAP GEÇMİŞİ</a>
            </td>
        </tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model,sayfa => Url.Action("Index",new { sayfa }))
<a href="/Uye/UyeEkle" class="btn btn-success">YENİ üye EKLE</a>
