@model MvcKütüphaneOtomasyonu.Models.Entity.TBLCATEGORY

@{
    ViewBag.Title = "KategoriGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>KategoriGetir</h2>

@using (Html.BeginForm("KategoriGuncelle", "Category", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(k => k.ID)
        @Html.TextBoxFor(k => k.ID, new { @class = "form-control" })
        <br />
        <label>KATEGORİ </label>
        @Html.TextBoxFor(k => k.AD, new { @class = "form-control" })
        <div>
            <button class="btn btn-warning"> GÜNCELLE </button>
        </div>
    </div>
}

