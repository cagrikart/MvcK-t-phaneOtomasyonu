@using MvcKütüphaneOtomasyonu.Models.Entity;
@model List<TBLADMİN>
@{
    ViewBag.Title = "Index2";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>

<h2>Üye Sayisi  </h2>
<table class="table table-bordered">
    <tr>
        <th> ID</th>
        <th> Kullanıcı</th>
        <th> Yetki</th>
        <th> Yetki</th>
        <th> Durum </th>
        <th> Sil</th>
        <th> Guncelle</th>
    </tr>
    @foreach (var item in Model)
    {


        <tr>
            <td>@item.ID</td>
            <td>@item.Kullanici</td>
            <td>@item.Yetki</td>
            <td>Success</td>
            <td>1</td>
            <td>
                <a href="/Ayarlar/AdminSil/@item.ID" class="btn btn-danger">SİL</a>
            </td>
            <td>
                <a href="/Ayarlar/AdminGetir/@item.ID" class="btn btn-success">GÜNCELLE</a>
            </td>
        </tr>
    }
</table>
<br />
<button class="btn btn-primary" data-toggle="modal" data-target="#Modal1">Yeni Admin Ekle </button>

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Admin Ekleme Paneli</h2>
            </div>
            <form method="post" action="/Ayarlar/YeniAdmin">
                <div class="modal-body">
                    <label>Kullanici Adi</label>
                    <input type="text" name="Kullanici" class="form-control" />
                    <label>Sifre</label>
                    <input type="text" name="Sifre" class="form-control" />
                    <label>Yetki</label>
                    <input type="text" name="Yetki" class="form-control" />
                    <button class="btn btn-info">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>