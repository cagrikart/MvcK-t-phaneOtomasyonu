
@{
    ViewBag.Title = "GirisYap";
}


    
<!DOCTYPE html>
<html lang="en">

<head>
    <!-- meta tags -->
    <meta charset="UTF-8" />
    <!-- /meta tags -->
    <!-- custom style sheet -->
    <link href="~/weblogin/css/style.css" rel="stylesheet" type="text/css" />
    <!-- /custom style sheet -->
    <!-- fontawesome css -->
    <link href="~/weblogin/css/fontawesome-all.css" rel="stylesheet" /> 
    <!-- /fontawesome css -->
    <!-- google fonts-->
    <link href="//fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <!-- /google fonts-->

</head>
    
    
<body>
    <h1>Kütüphane 
    Giriş Paneli </h1>
    <div class=" w3l-login-form">
        <h2>Login </h2>
        @using (Html.BeginForm("GirisYap", "Login", FormMethod.Post)) { 
      

            <div class=" w3l-form-group">
                <label>Kullanici ADİ</label>
                <div class="group">
                    <i class="fas fa-user"></i>
                    <input type="text" class="form-control" placeholder="MAİL" required="required" name="MAİL" />
                </div>
            </div>
            <div class=" w3l-form-group">
                <label>Şifre </label>
                <div class="group">
                    <i class="fas fa-unlock"></i>
                    <input type="password" class="form-control" placeholder="ŞİFRE" required="required" name="ŞİFRE" />
                </div>
            </div>
            <div class="forgot">
                <a href="#">Şifreni Unuttun ?</a>
                <p><input type="checkbox">Hatırla Beni</p>
            </div>
            <button type="submit">Gİriş Yap</button>
            }
            <p class=" w3l-register-p">Hesabınız yok ? Açalım size <a href="/KayitOl/Kayit/" class="register"> Kayıt Ol</a></p>
</div> 

    <footer>
        <p class="copyright-agileinfo">  Design by CK </p>
        <p class=" w3l-register-p">Admine panele git<a href="/Admin/Login/" class="register"> &nbsp; Admine git </a></p>

    </footer>

</body>

</html>
